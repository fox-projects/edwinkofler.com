{{>__html_begin}}
	{{>__head_begin}}
		<script
			data-goatcounter="https://edwinkofler-com.goatcounter.com/count"
			async
			src="https://gc.zgo.at/count.js"
		></script>
		<style>
			.header-minimal_ {
				position: absolute;
				bottom: 0;
				left: 0;
				width: 70px;
				height: 40px;
				background-color: #000;
				color: #fff;
				overflow: hidden;
			}
			.header-minimal_ a {
				display: block;
				text-align: center;
				font-size: 24px;
				font-family: monospace;
				line-height: 40px;
				text-decoration: none;
			}
			.header-minimal_ a:visited, .header-minimal_ a:hover, .header-minimal_ a:active {
				background-color: #000;
				color: #fff;
			}
			.header-minimal_ a:hover {
				font-weight: bold;
			}
			.header-minimal_ a:active {
				transform: scale(1.05);
				transition: transform 100ms ease-in-out;
			}
		</style>
	{{>__head_end}}
	{{__body}}
{{>__html_end}}
